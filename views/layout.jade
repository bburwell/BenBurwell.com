doctype 5
html
    head
        title= title || 'Ben Burwell'
        link(rel='stylesheet', href='/css/style.css')
        link(rel='shortcut icon', href='/images/icons/favicon.ico', sizes="128x128")
        link(rel='apple-touch-icon', href='/images/icons/apple/apple-touch-icon-57x57.png', sizes='57x57')
        link(rel='apple-touch-icon', href='/images/icons/apple/apple-touch-icon-72x72.png', sizes='72x72')
        link(rel='apple-touch-icon', href='/images/icons/apple/apple-touch-icon-76x76.png', sizes='76x76')
        link(rel='apple-touch-icon', href='/images/icons/apple/apple-touch-icon-114x114.png', sizes='114x114')
        link(rel='apple-touch-icon', href='/images/icons/apple/apple-touch-icon-120x120.png', sizes='120x120')
        link(rel='apple-touch-icon', href='/images/icons/apple/apple-touch-icon-144x144.png', sizes='144x144')
        link(rel='apple-touch-icon', href='/images/icons/apple/apple-touch-icon-152x152.png', sizes='152x152')
        meta(name='author', content='Ben Burwell')
        meta(name='description', content='Designer and developer. Thoughts on design, security, information, &amp; more')
        meta(name='keywords', content='ben burwell, designer, freelance, developer, programming')
        script(async, src='//code.jquery.com/jquery-1.10.2.min.js', type='text/javascript')
        script(async, type='text/javascript', src='//use.typekit.net/xgd2xxh.js')
        script(async, type='text/javascript').
            try{Typekit.load();}catch(e){}
        block css
        block javascripts
    body(class=body_class ? body_class : undefined)
        .main
            if nav
                header
                    h1
                        a(href='/').text Ben Burwell
                        span.tag designer &amp; developer
                    ul.top_nav_bar
                        li.projects
                            a(href='/projects/',
                                class=(current == 'projects')? 'current' : undefined) Projects
                        li.writing
                            a(href='/writing/',
                                class=(current == 'writing')? 'current' : undefined) Writing
                        li.github
                            a(href='https://github.com/benburwell', target='_blank') GitHub
                        li.resume
                            a(href='/resume/',
                                class=(current == 'resume')? 'current' : undefined) Résumé
            block content
        footer
            p
                a(href='/colophon/') colophon
